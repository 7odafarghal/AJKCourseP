<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.algohinys.ajkcoursep.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="236dp"
        android:layout_height="56dp"
        android:contentDescription="what is this"
        android:text="press"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="@android:color/holo_orange_dark"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="393dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="330dp"
        android:layout_height="19dp"
        android:progressDrawable="@android:drawable/button_onoff_indicator_on"
        android:progressTint="@android:color/holo_blue_bright"
        android:visibility="visible"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="119dp" />

</android.support.constraint.ConstraintLayout>
